
@{
    Layout = null;
}
@model Maladin.Areas.Partner.Models.LoginPartnerModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8"/>
    <title>Index</title>
    @Styles.Render("~/Areas/Partner/allcss")
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="../../images/logo.svg" alt="logo">
                            </div>
                            <h4><strong style="color:blue;">Maladin.com</strong> xin chào!</h4>
                            <h6 class="font-weight-light">Đăng nhập để sử dụng các tính năng của đối tác</h6>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, htmlAttributes: new { @class ="pt-3" }))
                            {
                                @Html.ValidationSummary(false,"",new {@class="text-danger"})
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.UserName, new {@class="form-control form-control-lg",@id="emailInputPartner",
                               placeholder="Tài khoản", type="text"})
                                    
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model=>model.UserPassword, new { @class="form-control form-control-lg", @id="passwordInputPartner",
                               placeholder="Mật khẩu"})
                                    
                                </div>
                                <div class="mt-3">
                                    <input type="submit" value="SIGN IN" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            
                                            <input type="checkbox" class="form-check-input" id="check_remember">
                                            Keep me signed in
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="mb-2">
                                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                        <i class="mdi mdi-facebook mr-2"></i>Connect using facebook
                                    </button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    @Scripts.Render("~/Areas/Partner/alljs")
    
</body>
</html>
