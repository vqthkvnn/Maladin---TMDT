@{
    ViewBag.Title = "Dữ liệu hàng hóa toàn hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}
    <title>@ViewBag.Title</title>
@section Scripts{

}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách tài khoản của hệ thống</h4>
                <div class="row">
                    <div class="col-lg-6 grid-margin stretch-card">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="search">
                                    <i class="mdi mdi-account-search"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" placeholder="search" aria-label="search" aria-describedby="search">
                            <button type="button" class="btn btn-primary btn-icon-text">
                                <i class="mdi mdi-magnify"></i>
                                Submit
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6 grid-margin stretch-card">
                        <form class="form-inline">
                            <label class="col-form-label" style="margin-right:20px;">Tùy chọn hiển thị:</label>
                            <select class="form-control" style="margin-right:20px;">
                                <option>Category1</option>
                                <option>Category2</option>
                                <option>Category3</option>
                                <option>Category4</option>
                            </select>
                            <button type="button" class="btn btn-primary mb-2">Áp dụng</button>
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Ngày đăng kí tài khoản</th>
                                <th>Loại tài khoản</th>
                                <th>Trạng thái tài khoản</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-1">
                                    <img src="../../images/faces/face1.jpg" alt="image">
                                </td>
                                <td>
                                    Herman Beck
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    $ 77.99
                                </td>
                                <td>
                                    May 15, 2015
                                </td>
                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

