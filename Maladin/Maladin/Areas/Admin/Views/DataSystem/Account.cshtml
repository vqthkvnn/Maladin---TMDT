@using PagedList;

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
    IPagedList<Maladin.EF.ACCOUNT> data = ViewBag.Data;
}
@section Scripts{
    <script>
        $('#search-account').click(function () {
            document.location.href = '@Url.Action("Account", "DataSystem")?q=' + $('#search-input').val();
        });

        function clickActive(id) {
            $.ajax({
                    type: "POST",
                    url: '@Url.Action("ActiveAccount", "DataSystem", new {Area="Admin" })?user='+id+'&act=false',
                        async: false,
                        dataType: "json",
                        contentType: "application/json",
                        jsonpCallback: 'callback',
                        cache: false,
                        success: function (json) {
                            console.log(json.status);
                            if (json.res == 1) {
                                toastr.success('Hủy Kích hoạt thành công cho tài khoản:' + id);
                            }
                            else {
                                toastr.error('Lỗi khi hủy kích hoạt');
                            }
                            },
                        error: function ()
                        { toastr.error('Lỗi server'); }
                        });
            
        }
        function clickUnactive(id) {
            
            $.ajax({
                    type: "POST",
                    url: '@Url.Action("ActiveAccount", "DataSystem", new {Area="Admin" })?user='+id+'&act=true',
                        async: false,
                        dataType: "json",
                        contentType: "application/json",
                        jsonpCallback: 'callback',
                        cache: false,
                        success: function (json) {
                            if (json.res == 1) {
                                toastr.success('Kích hoạt thành công cho tài khoản:' + id);
                            }
                            else {
                                toastr.error('Lỗi khi hủy kích hoạt');
                            }
                            },
                        error: function ()
                        { toastr.error('Lỗi server'); }
                        });
            
        }
        function clickDelete(id) {
            $('.modal-'+id).modal('show');
        }
    </script>
}
    <title>@ViewBag.Title</title>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách tài khoản của hệ thống</h4>
                <div class="row">
                    <div class="col-lg-6 grid-margin stretch-card">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="search">
                                    <i class="mdi mdi-account-search"></i>
                                </span>
                            </div>
                            <input type="text" id="search-input" class="form-control" placeholder="search" aria-label="search" aria-describedby="search">
                            <button type="button" class="btn btn-primary btn-icon-text" id="search-account">
                                <i class="mdi mdi-magnify"></i>
                                Submit
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-6 grid-margin stretch-card">
                        <form class="form-inline">
                            <label class="col-form-label" style="margin-right:20px;">Tùy chọn hiển thị:</label>
                            <select class="form-control" style="margin-right:20px;">
                                <option>Category1</option>
                                <option>Category2</option>
                                <option>Category3</option>
                                <option>Category4</option>
                            </select>
                            <button type="button" class="btn btn-primary mb-2">Áp dụng</button>
                        </form>
                    </div>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>Ngày đăng kí tài khoản</th>
                                <th>Loại tài khoản</th>
                                <th>Coin</th>
                                <th>Trạng thái tài khoản</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in data)
                            {
                                <tr>
                                    <td>
                                        <p>@i.USER_ACC</p>
                                    </td>
                                    <td>
                                        <p>@i.PASSWORD_ACC</p>
                                    </td>
                                    <td>
                                        <p>@i.EMAIL_INFO</p>
                                    </td>
                                    <td>
                                        <p>@i.DATE_CREATE_ACC.Value.ToString("dd-MM-yyyy")</p>
                                    </td>
                                    <td>
                                        <p>@i.ID_TYPE_ACC</p>
                                    </td>
                                    <td>
                                        <p>@Convert.ToString((i.COINT_ACC ?? 0))</p>
                                    </td>
                                    <td>
                                        @if ((i.IS_ACTIVE_ACC ?? false))
                                        {
                                            <label class="badge badge-success">Đã Kích Hoạt</label>

                                        }
                                        else
                                        {
                                            <label class="badge badge-danger">Chưa kích hoạt</label>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-outline-secondary btn-rounded btn-icon">
                                            <i class="mdi mdi-tooltip-edit text-primary"></i>
                                        </button>
                                        @if ((i.IS_ACTIVE_ACC ?? false))
                                        {
                                            <button type="button" class="btn btn-outline-secondary btn-rounded btn-icon" onclick="clickActive('@i.USER_ACC');">
                                                <i class="mdi mdi-account-remove text-primary"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-secondary btn-rounded btn-icon" id="active-btn" onclick="clickUnactive('@i.USER_ACC');">
                                                <i class="mdi mdi-account-check text-primary"></i>
                                            </button>

                                        }
                                        <button type="button" class="btn btn-outline-secondary btn-rounded btn-icon" id="delete-account" onclick="clickDelete('@i.USER_ACC')">
                                            <i class="mdi mdi-account-minus text-primary"></i>
                                        </button>
                                        <div class="modal fade modal-@i.USER_ACC" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModal">Xóa tài khoản</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Bạn có muốn xóa tài khoản <strong>@i.USER_ACC</strong> ra khoải hệ thống không?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                                        <button type="button" class="btn btn-primary" id="cfd-@i.USER_ACC">Xóa</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <hr />
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled" id="prviewc">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true" id="prview" disabled="">Previous</a>
                            </li>
                            <li class="page-item active" id="btnPage1"><a class="page-link" href="#" id="num1">1</a></li>
                            <li class="page-item" id="btnPage2"><a class="page-link" href="#" id="num2">2</a></li>
                            <li class="page-item" id="btnPage3"><a class="page-link" href="#" id="num3">3</a></li>
                            <li class="page-item" id="btnNext">
                                <a class="page-link" href="#" id="next">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

