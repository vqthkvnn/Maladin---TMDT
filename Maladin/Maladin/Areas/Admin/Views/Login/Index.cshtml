
@model Maladin.Areas.Admin.Models.LoginAdminModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập Admin Maladin.com </title>

    @Styles.Render("~/Areas/Admin/allcss")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="main-panel">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="logo text-uppercase"><strong class="text-primary">MALADIN.COM    </strong><span style="color:red;"> ADMIN</span></div>

                                <div class="brand-logo">
                                    <img src="../../images/logo.svg" alt="logo">
                                </div>
                                <h4>Chào mừng bạn đến với trang quản lý của ADMIN</h4>
                                @using (Html.BeginForm("Index", "Login", FormMethod.Post, htmlAttributes: new { @class = "pt-3" }))
                                {
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label for="exampleInputEmail">User Name</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(model => model.UserAdmin, new {@class="form-control form-control-lg border-left-0",
                                           @id="emailInputAdmin",placeholder="Tài khoản", type="text"})
                                           
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword">Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.PasswordFor(model=>model.PasswordAdmin, new { @class="form-control form-control-lg border-left-0",
                                           @id="passwordInputPartner", placeholder="Mật khẩu"})
                                           
                                        </div>
                                    </div>

                                    <div class="my-3">
                                       <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">LOGIN</button>
                                    </div>

                                    <div class="mb-2 d-flex">
                                        <button type="button" class="btn btn-facebook auth-form-btn flex-grow mr-1">
                                            <i class="mdi mdi-facebook mr-2"></i>Facebook
                                        </button>
                                        <button type="button" class="btn btn-google auth-form-btn flex-grow ml-1">
                                            <i class="mdi mdi-google mr-2"></i>Google
                                        </button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Fogget password <a href="register-2.html" class="text-primary">Click</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    @Scripts.Render("~/Areas/Admin/loginjs")
</body>
</html>
