
@{
    ViewBag.Title = "Thay đổi thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}

<div class="row" style="margin-left:10px;">
    <div class="card-body">
        <h4 class="card-title">Thay đổi thông tin tài khoản</h4>
        <form class="forms-sample">
            <div class="form-group row">
                <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="exampleInputUsername2" placeholder="Username" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Loại tài khoản</label>
                <div class="col-sm-9">
                    <select class="form-control" >
                        <option>ADMIN</option>
                        <option>CTV</option>
                        <option>Custumer</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Số tiền</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="exampleInputUsername2" placeholder="VND">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>

</div>




