<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/price-range.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/responsive.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body class="badge-v2 maladin-account maladin-cart">
    @Html.Action("HeaderRender", "PartialRender", new { Area = "" })
    <div class="wrap">
        <div class="container">
            <div class="row-style-1">
                @RenderPage("LeftMenuUser.cshtml")
                <div class="content-right">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @RenderPage("Footer.cshtml")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)

</body>
</html>
