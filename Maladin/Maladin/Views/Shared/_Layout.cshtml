            <div class="header-middle">
                <!--header-middle-->
                <div class="container">
                    <div class="row" style="padding-bottom: 0px; ">
                        <div class="col-md-2" style="top: -17px;">
                            <div class="logo pull-left">
                                <a href="index.html"><img src="~/assets/image/logo.png" alt="" /></a>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <form class="card card-sm">
                                <div class="card-body no-gutters align-items-center search-wrapper">
                                    <div class="input-search">
                                        <input class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search topics or keywords">
                                    </div>
                                    <div class="button-search">
                                        <button class="btn btn-search custom-btn-search" type="submit"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5">
                            <div class="col-md-3" style="padding-left: 0px;">
                                <a href="index.html">
                                    <div class="common-button-header header-nopadding">
                                        <i class="fa fa-truck cart-icon" aria-hidden="true"></i>
                                        <span>Theo dõi đơn hàng</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3" style="padding-left: 0px;">
                                <a href="index.html">
                                    <div class="common-button-header header-nopadding">
                                        <i class="fa fa-bell cart-icon" aria-hidden="true"></i>
                                        <span>Thông báo của tôi</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3" style="padding-left: 0px;">
                                <a href="index.html">
                                    <div class="common-button-header header-nopadding">
                                        <i class="fa fa-user cart-icon" aria-hidden="true"></i>
                                        <span>Tài khoản đăng nhập</span>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 cart-margin-3" style="padding-left: 0px;">
                                <a href="index.html">
                                    <div class="cart-shopping">
                                        <i class="fa fa-shopping-cart cart-icon" aria-hidden="true"></i>
                                        <span class="cart-text">Giỏ hàng </span>
                                        <span class="badge badge-primary">0</span>

                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/header-middle-->

            <div class="header-bottom">
                <!--header-bottom-->
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
